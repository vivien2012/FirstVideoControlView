<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:first="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="40dp">

    <com.vivien.firstvideocontrolview.FirstVideoControlView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        first:centerImg="@mipmap/sound" />

    <com.vivien.firstvideocontrolview.FirstVideoControlView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        first:centerImg="@mipmap/book"
        first:dotBg="@android:color/holo_purple"
        first:dotCount="10"
        first:dotFg="@android:color/darker_gray"
        first:splitSize="30" />

    <com.vivien.firstvideocontrolview.FirstVideoControlView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        first:centerImg="@mipmap/pencil"
        first:dotBg="@android:color/holo_red_dark"
        first:dotCount="8"
        first:dotFg="@android:color/holo_green_dark"
        first:splitSize="30" />
</RelativeLayout>
